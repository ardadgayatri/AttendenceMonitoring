<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".SetUpNewPasswordActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/check"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="20sp"
        android:background="@drawable/et_bg_shape"
        android:hint="Enter New Password"
        android:id="@+id/etSetUpNewPasswordNewPassword"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingLeft="16sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="20sp"
        android:background="@drawable/et_bg_shape"
        android:hint="Enter Confirm new Password"
        android:id="@+id/etSetUpNewPasswordConfirmPassword"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingLeft="16sp" />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/acbtnConfirmRegisterMobileNoSetUpPassword"
        android:text="Set Up Password"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/btn_bg_shape"
        android:layout_marginTop="20sp"/>

</LinearLayout>