<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".LoginActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/ivLoginLogo"
        android:src="@drawable/check"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvLoginTitle"
        android:text="Login Here"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/aldrich"
        android:layout_below="@+id/ivLoginLogo"
        android:textAlignment="center"
        android:layout_marginTop="25sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/tvLoginTitle"
        android:layout_margin="26sp"
        android:background="@color/black">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etLoginUserName"
            android:hint="Username"
            android:textColorHint="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/aldrich"
            android:inputType="text"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etLoginPassword"
            android:hint="Password"
            android:textColorHint="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/aldrich"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvForgetPassword"
            android:text="ForgetPassword?"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/aldrich"
            android:layout_gravity="right"
            android:layout_marginTop="1sp"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cbLoginShowHidePassword"
            android:text="Show Password"
            android:checked="false"
            android:textStyle="bold|italic"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/aldrich"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLoginLogin"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:background="@drawable/btbgshape"
            android:fontFamily="@font/aldrich"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />


    <TextView
        android:id="@+id/tvLoginNewUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivLoginLogo"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/aldrich"
        android:text="New User click Here..."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acbtnLoginSignInWithGoogle"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="@drawable/common_google_signin_btn_text_dark"
            android:text="Sign In With Google"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>



</RelativeLayout>
