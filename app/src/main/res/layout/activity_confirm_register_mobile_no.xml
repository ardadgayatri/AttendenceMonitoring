<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmRegisterMobileNoActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="16sp">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/check"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="20sp"
        android:background="@drawable/et_bg_shape"
        android:hint="Enter Register Mobile Number"
        android:id="@+id/etConfirmRegisterMobileNo"
        android:inputType="number"
        android:maxLength="10"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingLeft="16sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/acbtnConfirmRegisterMobileNoVerify"
        android:text="Verify"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/btn_bg_shape"
        android:layout_marginTop="20sp"/>
</LinearLayout>