<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyOTPActivity"
    android:orientation="vertical"
    android:gravity="center">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/otpverification"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OTP Verification"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="4sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the OTP to"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="2sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvVerifyOTPMobileno"
        android:text="+91 9834867298"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="4sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25sp"
        android:gravity="center">

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/etVerifyOTPInputCode1"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="normal"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"/>

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/etVerifyOTPInputCode2"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="normal"
            android:inputType="number"
            android:maxLength="1"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"/>

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/etVerifyOTPInputCode3"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="normal"
            android:inputType="number"
            android:maxLength="1"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"/>

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/etVerifyOTPInputCode4"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="normal"
            android:inputType="number"
            android:maxLength="1"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"/>

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/etVerifyOTPInputCode5"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="normal"
            android:inputType="number"
            android:maxLength="1"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"/>

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/etVerifyOTPInputCode6"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="normal"
            android:inputType="number"
            android:maxLength="1"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Didn't receive the OTP?"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="4sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvVerifyOTPResendOTP"
            android:text="Resent OTP"
            android:textColor="@color/light_red"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4sp"/>


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/acbtnVerifyOTPVerify"
        android:text="Verify"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:background="@drawable/btn_bg_shape"
        android:layout_margin="35dp"/>
    </LinearLayout>